import { createClient } from '@supabase/supabase-js';

export default async function handler(req, res) {
  if (req.method !== 'POST') {
    return res.status(405).json({ error: 'Method not allowed' });
  }

  const { email, dob } = req.body;
  
  console.log("ğŸ“¥ Save DOB request:", { email, dob });
  
  if (!email || !dob) {
    console.error("âŒ Missing email or DOB");
    return res.status(400).json({ error: 'Missing email or DOB' });
  }

  const supabase = createClient(
    process.env.SUPABASE_URL,
    process.env.SUPABASE_SERVICE_KEY
  );

  try {
    const { data, error } = await supabase
      .from('users')
      .update({ date_of_birth: dob })
      .eq('email', email)
      .select(); // â† Add .select() to get returned data

    console.log("ğŸ“¤ Update result:", { data, error });

    if (error) {
      console.error("âŒ Supabase error:", error);
      return res.status(500).json({ error: error.message });
    }

    if (!data || data.length === 0) {
      console.error("âŒ No rows updated - email not found?");
      return res.status(404).json({ error: 'Email not found in database' });
    }

    console.log("âœ… DOB updated successfully");
    return res.status(200).json({ success: true, data });

  } catch (err) {
    console.error("âŒ Unexpected error:", err);
    return res.status(500).json({ error: 'Internal server error' });
  }
}
